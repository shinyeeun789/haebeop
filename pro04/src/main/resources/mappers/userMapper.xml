<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
    <!-- 회원 목록 -->
    <select id="userList" resultType="kr.ed.haebeop.domain.User">
        select * from member WHERE NOT id IN ('admin') order by regdate desc
    </select>

    <!-- 회원정보 조회 -->
    <select id="getUser" resultType="kr.ed.haebeop.domain.User">
        select * from member
        where id = #{id}
    </select>

    <!-- 회원가입 -->
    <insert id="userInsert">
        insert into member
        values(#{id},#{pw},#{name},#{email},#{tel},#{addr1},#{addr2},#{postcode},default,#{birth},default,default)
    </insert>

    <!-- 로그인 -->
    <select id="loginCheck" resultType="kr.ed.haebeop.domain.User">
        select id, pw, name from member where id = #{id }
    </select>

    <!-- 방문수 업데이트 -->
    <update id="updateVisited">
        update member set visited=visited+1
        where id=#{id}
    </update>

    <!-- 포인트 획득! -->
    <update id="updatePt">
        update member set pt=pt+#{pt}
        where id=#{id}
    </update>

    <!-- 회원 정보 수정 -->
    <update id="userEdit">
        update member set pw=#{pw }, name=#{name }, email=#{email }, tel=#{tel }, birth=#{birth }, addr1=#{addr1 }, addr2=#{addr2 }, postcode=#{postcode } where id = #{id }
    </update>

    <!-- 회원 탈퇴 -->
    <delete id="userDelete">
        delete from member where id=#{id}
    </delete>

    <!-- 회원 수 조회 -->
    <select id="userCnt" resultType="integer">
        select count(*) from member
    </select>

